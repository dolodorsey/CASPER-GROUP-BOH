# ============================================
# 2026 CONTROL CENTER - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values.
# Never commit your .env file to version control.

# ============================================
# SUPABASE (Database & Auth)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=
EXPO_PUBLIC_SUPABASE_ANON_KEY=

# ============================================
# n8n WORKFLOWS (Kollective Brain)
# ============================================
# Your n8n instance base URL
EXPO_PUBLIC_N8N_BASE_URL=

# Optional: Authentication token for n8n webhooks
EXPO_PUBLIC_N8N_WEBHOOK_TOKEN=

# ============================================
# AIRTABLE (Data Store)
# ============================================
# Get these from: https://airtable.com/account
EXPO_PUBLIC_AIRTABLE_API_KEY=
EXPO_PUBLIC_AIRTABLE_BASE_ID=

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================
# Uncomment and fill these as needed for your workflows

# Clay.com API
# EXPO_PUBLIC_CLAY_API_KEY=

# Apify API
# EXPO_PUBLIC_APIFY_API_KEY=

# OpenAI API
# EXPO_PUBLIC_OPENAI_API_KEY=

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Set to 'development', 'staging', or 'production'
EXPO_PUBLIC_ENV=production

# Enable debug mode for development
# EXPO_PUBLIC_DEBUG_MODE=false
